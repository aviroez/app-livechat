<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <!--<item name="android:background">@color/white</item>-->
        <!--<item name="android:color">@color/black</item>-->

        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:displayOptions">useLogo</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeDialogTransparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="chat_name">

    </style>

    <style name="gridUserStyle">
        <item name="android:background">@drawable/shape_stream_bubble_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="gridUserTitleStyle">
        <item name="android:background">@drawable/shape_stream_top_bubble_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="gridUserNameStyle">
        <item name="android:background">@drawable/shape_stream_bottom_bubble_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="buttonStartStreamStyle">
        <item name="android:background">@drawable/shape_stream_round_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textStartStreamStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="streamButtonFollowStyle">
        <item name="android:background">@drawable/shape_stream_round_white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="streamTitleBoxStyle">
        <item name="android:background">@drawable/shape_stream_round_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="streamTitleBoxBlackStyle">
        <item name="android:background">@drawable/shape_stream_round_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="loginButtonStyle">
        <item name="android:background">@drawable/shape_button_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">@dimen/login_button_height</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="loginBackgroundStyle">
        <item name="android:background">@drawable/shape_login_background</item>
    </style>

    <style name="loginPrimaryStyle">
        <item name="android:background">@drawable/shape_button_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="loginDefaultStyle">
        <item name="android:background">@drawable/shape_button_login_default</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="profileLinkButton">
        <item name="android:background">@drawable/shape_stream_bubble_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="shapeEditTextChat">
        <item name="android:background">@drawable/shape_edit_text_chat</item>
    </style>

    <style name="topBorderStyle">
        <item name="android:background">@drawable/top_border_layout</item>
    </style>

    <style name="bottomBorderStyle">
        <item name="android:background">@drawable/bottom_border_layout</item>
    </style>

    <style name="rankingPrimaryStyle">
        <item name="android:background">@drawable/ranking_bg_2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="rankingBadgeStyle">
        <item name="android:background">@drawable/shape_button_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="levelBadgeStyle">
        <item name="android:background">@drawable/shape_level_badge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="boxHolderStyle">
        <item name="android:background">@drawable/box_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">4dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="blackTransparentBlackButtonStyle">
        <item name="android:background">@drawable/selector_button_transparent_black</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
